<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/homeback_original" >

    <ImageView
        android:id="@+id/board_image"
        android:layout_width="367dp"
        android:layout_height="421dp"
        android:layout_weight="0.36"
        android:background="@drawable/robot_silverboardf"
        fbutton:layout_constraintLeft_toLeftOf="parent"
        fbutton:layout_constraintRight_toRightOf="parent"
        fbutton:layout_constraintHorizontal_bias="0.375"
        android:layout_marginLeft="12dp"
        fbutton:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="110dp"
        fbutton:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="13dp"
        fbutton:layout_constraintVertical_bias="0.666" />

    <info.hoang8f.widget.FButton
        android:id="@+id/left_button"
        android:layout_width="45dp"
        android:layout_height="33dp"
        android:clickable="true"
        android:shadowColor="#3786A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        tools:text="LEFT"
        android:layout_marginLeft="15dp"
        fbutton:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp"
        fbutton:layout_constraintLeft_toLeftOf="parent" />

    <info.hoang8f.widget.FButton
        android:id="@+id/right_button"
        android:layout_width="45dp"
        android:layout_height="33dp"

        android:clickable="true"
        android:shadowColor="#3786A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        tools:text="RIGHT"
        fbutton:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp"
        fbutton:layout_constraintLeft_toRightOf="@+id/left_button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="250dp"
        fbutton:layout_constraintRight_toRightOf="parent" />

    <info.hoang8f.widget.FButton
        android:id="@+id/up_button"
        android:layout_width="45dp"
        android:layout_height="33dp"

        android:clickable="true"
        android:shadowColor="#3786A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:textColor="#FFFFFF"
        tools:text="UP"
        android:layout_marginLeft="15dp"
        fbutton:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        fbutton:layout_constraintTop_toBottomOf="@+id/board_image"
        android:layout_marginBottom="15dp"
        fbutton:layout_constraintBottom_toTopOf="@+id/left_button" />

    <info.hoang8f.widget.FButton
        android:id="@+id/down_button"
        android:layout_width="45dp"
        android:layout_height="33dp"

        android:clickable="true"
        android:shadowColor="#3786A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:textColor="#FFFFFF"
        tools:text="DOWN"
        android:layout_marginTop="4dp"
        fbutton:layout_constraintTop_toBottomOf="@+id/board_image"
        android:layout_marginBottom="15dp"
        fbutton:layout_constraintBottom_toTopOf="@+id/right_button"
        fbutton:layout_constraintLeft_toRightOf="@+id/up_button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="250dp"
        fbutton:layout_constraintHorizontal_bias="0.571"
        fbutton:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="67dp"
        android:layout_height="26dp"
        android:text="Count:"

        android:textColor="@color/fbutton_color_clouds"
        android:textStyle="bold"
        fbutton:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        fbutton:layout_constraintBottom_toTopOf="@+id/board_image"
        android:layout_marginLeft="8dp"
        fbutton:layout_constraintLeft_toLeftOf="parent"
        fbutton:layout_constraintRight_toLeftOf="@+id/textView2"
        android:layout_marginRight="100dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="86dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text="Time:"

        android:textColor="@color/fbutton_color_clouds"
        android:textStyle="bold"
        fbutton:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="0dp"
        fbutton:layout_constraintBottom_toTopOf="@+id/board_image"
        android:layout_marginRight="100dp"
        fbutton:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="52dp"
        android:layout_height="49dp"
        android:clickable="true"
        fbutton:srcCompat="@drawable/ic_reset"
        fbutton:layout_constraintLeft_toLeftOf="parent"
        fbutton:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="2dp"
        fbutton:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="25dp"
        fbutton:layout_constraintTop_toBottomOf="@+id/board_image" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="25dp"
        fbutton:srcCompat="@drawable/blue_robot"
        android:layout_marginLeft="0dp"
        fbutton:layout_constraintLeft_toLeftOf="@+id/board_image"
        android:layout_marginRight="0dp"
        fbutton:layout_constraintRight_toRightOf="@+id/board_image"
        fbutton:layout_constraintBottom_toBottomOf="@+id/board_image"
        android:layout_marginBottom="79dp"
        fbutton:layout_constraintHorizontal_bias="0.206" />

    <ImageView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        fbutton:layout_constraintLeft_toLeftOf="@+id/board_image"
        android:layout_marginRight="5dp"
        fbutton:layout_constraintRight_toRightOf="@+id/board_image"
        fbutton:layout_constraintBottom_toBottomOf="@+id/board_image"
        android:layout_marginBottom="5dp"
        fbutton:layout_constraintTop_toTopOf="@+id/board_image"
        android:layout_marginTop="5dp"
        fbutton:layout_constraintHorizontal_bias="1.0"
        fbutton:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/red_robot"
        android:layout_width="23dp"
        android:layout_height="28dp"
        fbutton:srcCompat="@drawable/red_robot"
        android:layout_marginLeft="71dp"
        fbutton:layout_constraintLeft_toLeftOf="@+id/board_image"
        fbutton:layout_constraintTop_toTopOf="@+id/board_image"
        android:layout_marginTop="157dp" />

</android.support.constraint.ConstraintLayout>
